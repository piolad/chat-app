@page
@model aspnetapp.Pages.MainLoginModel
@{
    ViewData["Title"] = "Send Message";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #0058DC;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
        .centered-div {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgb(149, 206, 247);
            padding: 20px;
            border-radius: 10px;
        }
        button {
            padding: 10px 20px;
            background-color: #0058DC;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #003BB8;
        }
    </style>
</head>
<body>
    <div class="centered-div">
        <form method="post">
            <button type="submit">Send</button>
        </form>
    </div>
</body>
</html>
