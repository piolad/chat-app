@page
@model aspnetapp.Pages.MainLoginModel

<h2>Send message</h2>

@if (!string.IsNullOrEmpty(Model.Alert))
{
    <div class="alert">@Model.Alert</div>
}

<form method="post">
    <div>
        <label>Sender</label>
        <input asp-for="Sender" />
        <span asp-validation-for="Sender"></span>
    </div>
    <div>
        <label>Receiver</label>
        <input asp-for="Receiver" />
        <span asp-validation-for="Receiver"></span>
    </div>
    <div>
        <label>Message</label>
        <textarea asp-for="Body"></textarea>
        <span asp-validation-for="Body"></span>
    </div>
    <button type="submit">Send</button>
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
